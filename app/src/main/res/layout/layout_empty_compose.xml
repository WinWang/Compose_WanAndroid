<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/le_empty_image"
        android:layout_width="320pt"
        android:layout_height="300pt"
        android:layout_marginTop="30pt"
        android:background="@drawable/common_empty_img" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:layout_marginBottom="30pt"
        android:text="@string/fine_no_data"
        android:textColor="#999"
        android:textSize="33pt" />

</LinearLayout>


