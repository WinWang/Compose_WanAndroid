<?xml version="1.0" encoding="utf-8"?>
<com.winwang.composewanandroid.widget.LoadingNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_load_sir_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_error_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="10pt"
            android:background="@drawable/common_empty_img" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抱歉，数据异常"
            android:textColor="#999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:text="点我重试"
            android:textColor="#999"
            android:textSize="14sp" />


    </LinearLayout>


</com.winwang.composewanandroid.widget.LoadingNestedScrollView>
